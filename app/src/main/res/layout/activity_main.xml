<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="343dp"
        android:layout_height="46dp"
        android:layout_margin="10dp"
        android:text="ORTALAMA HESAPLA"
        android:textAlignment="center"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="307dp" />

    <EditText
        android:id="@+id/vizeEditText"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Vize"
        android:inputType="text"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="137dp" />

    <EditText
        android:id="@+id/finalEditText"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Final"
        android:inputType="text"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="191dp" />

    <EditText
        android:id="@+id/odevEditText"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Ödev"
        android:inputType="text"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="240dp" />

    <TextView
        android:id="@+id/sonucTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="0"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="307dp" />

    <Button
        android:onClick="hesapla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesapla"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="386dp" />

    <!--İKİNCİ ALAN-->

    <TextView
        android:layout_width="343dp"
        android:layout_height="46dp"
        android:layout_margin="10dp"
        android:text="KAÇ ALMAM GEREKİYOR ?"
        android:textAlignment="center"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="307dp" />

    <EditText
        android:id="@+id/vizeEditText2"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Vize"
        android:inputType="text"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="137dp" />

    <TextView
        android:id="@+id/sonucTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="0"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="307dp" />

    <Button
        android:onClick="hesapla2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesapla"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="386dp" />

</LinearLayout>